<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_search_branch"
    tools:context="com.zhuyawei.airlinereservation.SearchBranchActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccf">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/home"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="SearchBranch"
            android:textSize="20sp"
            android:textColor="#fff"/>

    </RelativeLayout>

    <Spinner
        android:id="@+id/sp_search_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/sp_more"
        />

    <Button
        android:id="@+id/bt_search_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_search_branch"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="SEARCH"
        android:textSize="20sp"
        android:textColor="#fff"
        android:background="@drawable/bt_bg"/>

    <ImageView
        android:id="@+id/iv_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_search_branch"
        android:layout_marginTop="5dp"
        android:src="@drawable/shadow"
        android:scaleType="centerCrop"/>

    <ListView
        android:id="@+id/lv_search_branch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_shadow"
        android:background="#f1f1f1"></ListView>

</RelativeLayout>
