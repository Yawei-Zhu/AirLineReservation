<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_menu"
    tools:context="com.zhuyawei.airlinereservation.MenuActivity"
    android:background="@drawable/main_bg">

    <ImageButton
        android:id="@+id/ibtn_search_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/bt_search_branch"
        android:background="@android:color/white"/>

    <ImageButton
        android:id="@+id/ibtn_search_flight_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ibtn_search_branch"
        android:layout_marginTop="40dp"
        android:src="@drawable/bt_search_flight_plan"
        android:background="@android:color/white"/>

</RelativeLayout>
